@import 'rupture'
@import 'jeet'
@import "variable/_constant.styl"
@import "variable/_function.styl"
@import "variable/_ie.styl"
@import "icon/sprite.css"
@import "icon/style.css"
@import "variable/_default.styl"
@import "variable/_element.styl"
@import "variable/_fonts.styl"

rupture.scale = 0 480px 768px 992px 1200px
rupture.scale-names = 'xs' 'sm' 'md' 'lg'
jeet.gutter = 1


		
body
	font-size 15px
	//font-family 'Open Sans'
	font-family Verdana, Geneva, sans-serif!important
	overflow-x hidden
	//color #616161
	background #fbfbfb 
.main-cont
	center(1200px)
	position relative
	width 100%
	padding  0 10px
	+above(1200px)
		width 1200px
	.main-cont
		width 100%
.content
	//padding 40px 0
	background grey
	padding-bottom 40px
.content__wraper
	//margin-top 40px
.content__info
	+below(768px)
		margin-top 0px
	fw()
	flex(between)
	align-items flex-start
	margin-top 30px
	z-index 2000
.content__left
	+below(996px)
		width 100%
	width 74%
	position relative
	z-index 100
.content__right
	+below(996px)
		width 100%
	width 24%
.sticky-wrapper
	width 100%
.st-head-row
	background #e8e8eb !important
.ya-share2
	margin-top 20px
p,li
	+below(768px)
		font-size 14px 
	margin-bottom 30px
	font-size 16px
	line-height  2.0
ul
	margin-bottom 30px
.st-head-row
	p
		font-size 14px
.st-key 
	p
		strong 
			color black
			font-weight 400 
.table_price
	span
		font-size 12px
		
.search-wrap
	flex(mid)
	margin-bottom 20px

.serchform-line
	width 100%

.serch-btn
	background #383345
	color white

.item-found
	display block
	border-bottom 1px solid #dddae2

.download
	f()
	border 1px solid #efebde
	margin-bottom: 30px

.download-icon
	width 80px
	padding 20px

.download-cont
	width 100%
	background #efebde
	display flex
	align-items center
	padding 20px
	font-size 18px
	color black

.table_price
	border 0
	box-shadow 0px 4px 2px #e0e0e0
	margin 60px 0
	
.table_price tbody tr:nth-child(odd) td, .table_price tbody tr:nth-child(odd) th
	background-color	 #f3f3f3


.table_price td, .table_price th
		border-top 0
		padding 15px
.table_price tr td:nth-child(2) p
	font-size 14px

.table_price span
	margin-right 5px
	
table.table_price p
	font-size 14px


