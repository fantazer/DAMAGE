rupture.scale = 0 480px 768px 992px 1200px
rupture.scale-names = 'xs' 'sm' 'md' 'lg'
jeet.gutter = 1


body
	font-size 14px
	font-family 'Open Sans'
	overflow-x hidden
	color #616161
.main-cont
	center(1200px)
	position relative
	width 100%
	padding  0 10px
	+above(1200px)
		width 1200px
.content
	//padding 40px 0
	background grey
	padding-bottom 40px
.content__wraper
	//margin-top 40px
.content__info
	+below(768px)
		margin-top 0px
	fw()
	flex(between)
	align-items flex-start
	margin-top 30px
.content__left
	+below(996px)
		width 100%
	width 74%
	position relative
	z-index 100
.content__right
	+below(996px)
		width 100%
	width 24%
.sticky-wrapper
	width 100%
.st-head-row
	background #e8e8eb !important
